{
  "compilerOptions": {
    "module": "amd",
    "target": "es5",
    "moduleResolution":"node",
    "sourceMap": false,
    "newLine": "LF",
    "experimentalDecorators": true,
    "noImplicitUseStrict": true,
    "baseUrl": ".",
    "lib": ["es5", "es2015.promise", "dom"],
    "paths": {
      "N": ["node_modules/@hitc/netsuite-types/N"],
      "N/*": ["node_modules/@hitc/netsuite-types/N/*"]
    },
    "types": [
      "jquery",
      "requirejs"
    ],
    "allowJs": true,
    "checkJs": true,
    "noEmit":  true
  },
  "include": ["src/js/**/*.js"],
  "exclude": ["node_modules"]
}
